{
  "_comment": "OpenClaw configuration template. Fill in your values and save as openclaw-secrets.json (gitignored). The setup script will merge this into ~/.openclaw/openclaw.json",

  "env": {
    "vars": {
      "OPENAI_API_KEY": "",
      "ANTHROPIC_API_KEY": "",
      "OPENROUTER_API_KEY": "",
      "GEMINI_API_KEY": "",
      "BRAVE_API_KEY": ""
    }
  },

  "auth": {
    "profiles": {
      "anthropic:default": {
        "provider": "anthropic",
        "mode": "api_key"
      },
      "openai:default": {
        "provider": "openai",
        "mode": "api_key"
      }
    },
    "order": {
      "anthropic": ["anthropic:default"],
      "openai": ["openai:default"]
    }
  },

  "models": {
    "mode": "merge",
    "providers": {
      "anthropic": {
        "baseUrl": "https://api.anthropic.com",
        "apiKey": "ANTHROPIC_API_KEY",
        "api": "anthropic-messages",
        "models": [
          {
            "id": "claude-opus-4-6",
            "name": "Claude Opus 4.6",
            "reasoning": false,
            "input": ["text", "image"],
            "cost": { "input": 15, "output": 75, "cacheRead": 1.5, "cacheWrite": 18.75 },
            "contextWindow": 200000,
            "maxTokens": 8192
          },
          {
            "id": "claude-sonnet-4-5-20250514",
            "name": "Claude Sonnet 4",
            "reasoning": false,
            "input": ["text", "image"],
            "cost": { "input": 3, "output": 15, "cacheRead": 0.3, "cacheWrite": 3.75 },
            "contextWindow": 200000,
            "maxTokens": 8192
          }
        ]
      }
    }
  },

  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-opus-4-6",
        "fallbacks": ["anthropic/claude-sonnet-4-5"]
      },
      "models": {
        "anthropic/claude-opus-4-6": { "alias": "opus" },
        "anthropic/claude-sonnet-4-5": { "alias": "sonnet" }
      },
      "memorySearch": {
        "sources": ["memory", "sessions"],
        "provider": "gemini",
        "fallback": "none"
      },
      "compaction": { "mode": "safeguard" },
      "heartbeat": { "every": "1h" },
      "maxConcurrent": 6,
      "subagents": { "maxConcurrent": 8 }
    }
  },

  "channels": {
    "_comment_discord": "Get token from https://discord.com/developers/applications",
    "discord": {
      "enabled": false,
      "token": "",
      "groupPolicy": "allowlist",
      "dmPolicy": "pairing",
      "allowFrom": [],
      "guilds": {}
    },

    "_comment_telegram": "Get bot token from @BotFather on Telegram",
    "telegram": {
      "enabled": false,
      "botToken": "",
      "dmPolicy": "pairing",
      "groupPolicy": "allowlist",
      "allowFrom": [],
      "groups": {}
    },

    "_comment_slack": "See scripts/create-slack-bot.sh or set up manually",
    "slack": {
      "enabled": false,
      "mode": "socket",
      "appToken": "",
      "botToken": "",
      "dmPolicy": "pairing",
      "groupPolicy": "allowlist",
      "allowFrom": [],
      "channels": {}
    }
  },

  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "loopback",
    "auth": {
      "mode": "token",
      "token": ""
    }
  },

  "memory": {
    "backend": "builtin",
    "qmd": {
      "includeDefaultMemory": true,
      "paths": [
        { "path": ".", "name": "workspace", "pattern": "**/*.md" }
      ],
      "update": { "interval": "5m" }
    }
  },

  "skills": {
    "allowBundled": [
      "discord",
      "gemini",
      "github",
      "mcporter",
      "nano-banana-pro",
      "openai-whisper-api",
      "session-logs",
      "skill-creator",
      "tmux",
      "gog",
      "goplaces",
      "healthcheck",
      "nano-pdf",
      "openai-image-gen",
      "slack"
    ],
    "entries": {
      "brave-search": { "apiKey": "" }
    }
  },

  "plugins": {
    "allow": [
      "device-pair",
      "memory-core",
      "discord",
      "telegram",
      "slack"
    ],
    "entries": {
      "discord": { "enabled": false },
      "telegram": { "enabled": false },
      "slack": { "enabled": false }
    }
  },

  "session": {
    "reset": {
      "mode": "idle",
      "idleMinutes": 525600
    }
  }
}
